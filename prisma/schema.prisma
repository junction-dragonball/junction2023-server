generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  deviceId String     @unique
  name     String
  points   Int        @default(0)
  Progress Progress[]
}

model Quest {
  id           Int        @id @default(autoincrement())
  title        String
  thumbnailUrl String
  mainImageUrl String
  difficulty   Int
  description  String
  period       Int
  verifyMethod String
  instruction  Json
  reward       Int
  available    Boolean    @default(true)
  createdAt    DateTime   @default(now())
  Progress     Progress[]
}

model Progress {
  id        Int      @id @default(autoincrement())
  status    String
  startDate DateTime @default(now())
  endDate   DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  quest     Quest    @relation(fields: [questId], references: [id])
  questId   Int
}

model Restaurant {
  id           Int    @id @default(autoincrement())
  name         String
  latitude     Float
  longitude    Float
  kakaoMapId   String
  rating       Float
  thumbnailUrl String
  mainImageUrl String
  menus        Menu[]
}

model Menu {
  id           Int        @id @default(autoincrement())
  thumnailUrl  String
  name         String
  price        Int
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId Int
}
